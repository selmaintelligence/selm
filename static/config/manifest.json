{
  "name": "Small Efficient Learning Model",
  "short_name": "Selm",
  "start_url": "/selm/index.html",  // Direct path for your PWA hosted on GitHub Pages
  "display": "standalone",
  "scope": "/selm/",  // Defines the navigation scope to your app's base path
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "icons": [
    {
      "src": "/static/images/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/static/images/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.selm",
      "id": "com.example.selm"
    },
    {
      "platform": "itunes",
      "url": "https://itunes.apple.com/app/example-selm/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Submit a prompt",
      "short_name": "Submit",
      "description": "Quick access to input a prompt",
      "url": "/selm/index.html#submit",
      "icons": [
        {
          "src": "/static/images/submit-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "permissions": [
    {
      "name": "notifications",
      "description": "Allows the web app to send notifications for updates or messages",
      "default": "granted"
    }
  ]
}
